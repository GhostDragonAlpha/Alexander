        "FailureConditions": ["EscortTargetDestroyed", "PlayerDestroyed", "VIPKilled"],
        "SuccessConditions": ["TargetSafelyDelivered", "VIPProtected", "ConvoyComplete"]
      },
      
      "SearchAndRescue": {
        "SpawnTags": ["Distress", "Emergency", "Rescue"],
        "RequiredSystems": ["DistressSignalManager", "RescueTargetAI", "MedicalSystem"],
        "FailureConditions": ["RescueTargetDied", "TimeExpired", "PlayerDestroyed"],
        "SuccessConditions": ["SurvivorsRescued", "MedicalAidDelivered", "EvacuationComplete"]
      }
    },
    
