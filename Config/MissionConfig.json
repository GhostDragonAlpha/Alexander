{
  "MissionSystem": {
    "Version": "1.0",
    "Description": "Mission system configuration for Alexander VR Space Simulation",
    
    "DifficultyTiers": {
      "Easy": {
        "LevelRange": [1, 5],
        "EnemyCountMultiplier": 0.7,
        "EnemyHealthMultiplier": 0.8,
        "RewardMultiplier": 0.8,
        "TimeLimitMultiplier": 1.2,
        "RecommendedShipTier": "Basic"
      },
      "Medium": {
        "LevelRange": [3, 10],
        "EnemyCountMultiplier": 1.0,
        "EnemyHealthMultiplier": 1.0,
        "RewardMultiplier": 1.0,
        "TimeLimitMultiplier": 1.0,
        "RecommendedShipTier": "Standard"
      },
      "Hard": {
        "LevelRange": [8, 15],
        "EnemyCountMultiplier": 1.3,
        "EnemyHealthMultiplier": 1.2,
        "RewardMultiplier": 1.5,
        "TimeLimitMultiplier": 0.9,
        "RecommendedShipTier": "Advanced"
      },
      "VeryHard": {
        "LevelRange": [12, 20],
        "EnemyCountMultiplier": 1.6,
        "EnemyHealthMultiplier": 1.5,
        "RewardMultiplier": 2.0,
        "TimeLimitMultiplier": 0.8,
        "RecommendedShipTier": "Elite"
      }
    },
    
    "RewardScaling": {
      "BaseCreditsPerLevel": 500,
      "CreditScalingFormula": "BaseCredits * Level * DifficultyMultiplier * MissionTypeMultiplier",
      "XPScalingFormula": "BaseXP * Level * 0.8 * DifficultyMultiplier",
      
      "MissionTypeMultipliers": {
        "Combat": 1.2,
        "Exploration": 1.0,
        "Trading": 0.9,
        "Escort": 1.1,
        "SearchAndRescue": 1.3
      },
      
      "ReputationRewards": {
        "BaseReputation": 10,
        "FactionBonus": 5,
        "PerfectCompletionBonus": 10
      }
    },
    
    "MissionTypes": {
      "Combat": {
        "SpawnTags": ["Hostile", "CombatZone", "PirateActivity"],
        "RequiredSystems": ["CombatManager", "EnemySpawner", "LootSystem"],
        "FailureConditions": ["PlayerDestroyed", "TargetEscaped", "TimeExpired"],
        "SuccessConditions": ["AllEnemiesDefeated", "TargetDestroyed", "AreaSecured"]
      },
      
      "Exploration": {
        "SpawnTags": ["Uncharted", "Anomaly", "Discovery"],
